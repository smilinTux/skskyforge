# SkyForge Environment Variables
# ===============================
# Copy this file to .env and fill in your values
# cp env.example .env

# ==============================================================================
# Required Settings
# ==============================================================================

# Output directory for generated calendars
SKYFORGE_OUTPUT_DIR=./output

# Default profile name
SKYFORGE_DEFAULT_PROFILE=default

# Swiss Ephemeris data path
SWISSEPH_PATH=./ephe

# ==============================================================================
# Optional Settings
# ==============================================================================

# Geocoding API Key (optional - only needed if using Google geocoding)
# GEOCODING_API_KEY=your_google_api_key_here

# Log level (DEBUG, INFO, WARNING, ERROR)
SKYFORGE_LOG_LEVEL=INFO

# ==============================================================================
# Web Dashboard Settings (optional)
# ==============================================================================

SKYFORGE_WEB_HOST=127.0.0.1
SKYFORGE_WEB_PORT=8000
SKYFORGE_WEB_DEBUG=false
